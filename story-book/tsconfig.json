{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsxImportSource": "@emotion/react",
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
        "@api/*": ["api/*"],
        "@app/*": ["app/*"],
        "@assets/*": ["assets/*"],
        "@components/*": ["components/*"],
        "@config/*": ["config/*"],
        "@const/*": ["const/*"],
        "@helpers/*": ["helpers/*"],
        "@hooks/*": ["hooks/*"],
        "@layouts/*": ["layouts/*"],
        "@redux/*": ["redux/*"],
        "@services/*": ["services/*"],
        "@styles/*": ["styles/*"],
        "@type/*": ["types/*"],
        "@utils/*": ["utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
